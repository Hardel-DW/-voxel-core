{
    "name": "@voxelio/core",
    "type": "module",
    "author": {
        "name": "Hardel",
        "email": "teams.voxel@gmail.com",
        "url": "https://voxel.hardel.io"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Hardel-DW/voxel-core.git"
    },
    "homepage": "https://voxel.hardel.io",
    "license": "MIT",
    "version": "0.4.6",
    "main": "./dist/core.js",
    "types": "./dist/core.d.ts",
    "exports": {
        "./converter": {
            "import": "./dist/converter.js",
            "types": "./dist/converter.d.ts"
        },
        "./core": {
            "import": "./dist/core.js",
            "types": "./dist/core.d.ts"
        },
        "./i18n": {
            "import": "./dist/i18n.js",
            "types": "./dist/i18n.d.ts"
        },
        "./net": {
            "import": "./dist/net.js",
            "types": "./dist/net.d.ts"
        },
        "./collections": {
            "import": "./dist/collections.js",
            "types": "./dist/collections.d.ts"
        }
    },
    "scripts": {
        "build": "rollup -c",
        "biome:format": "biome format --write ./src",
        "biome:check": "biome check ./src",
        "biome:unsafefix": "biome check --write --unsafe  ./src",
        "check": "tsc --noEmit",
        "test": "vitest",
        "prepublishOnly": "pnpm run build",
        "version": "pnpm run build",
        "release:patch": "pnpm version patch && pnpm publish",
        "release:minor": "pnpm version minor && pnpm publish",
        "release:major": "pnpm version major && pnpm publish"
    },
    "dependencies": {
        "jszip": "^3.10.1",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.3",
        "tslib": "^2.6.2",
        "typescript": "^5.7.3",
        "vitest": "^3.0.5",
        "rollup": "^3.x.x",
        "@rollup/plugin-alias": "^4.x.x",
        "rollup-plugin-typescript2": "^0.34.1"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": ["dist", "package.json"]
}
