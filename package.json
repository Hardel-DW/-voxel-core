{
    "name": "@voxelio/core",
    "author": {
        "name": "Hardel",
        "email": "teams.voxel@gmail.com",
        "url": "https://voxel.hardel.io"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Hardel-DW/voxel-core.git"
    },
    "homepage": "https://voxel.hardel.io",
    "license": "MIT",
    "version": "0.4.10",
    "type": "module",
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "unpkg": "./dist/voxel.umd.cjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./core": {
            "types": "./dist/core.d.ts",
            "default": "./dist/core.js"
        },
        "./converter": {
            "types": "./dist/converter.d.ts",
            "default": "./dist/converter.js"
        },
        "./i18n": {
            "types": "./dist/i18n.d.ts",
            "default": "./dist/i18n.js"
        },
        "./net": {
            "types": "./dist/net.d.ts",
            "default": "./dist/net.js"
        },
        "./collections": {
            "types": "./dist/collections.d.ts",
            "default": "./dist/collections.js"
        }
    },
    "scripts": {
        "build": "tsc && vite build",
        "biome:format": "biome format --write ./src",
        "biome:check": "biome check ./src",
        "biome:unsafefix": "biome check --write --unsafe  ./src",
        "check": "tsc --noEmit",
        "test": "vitest",
        "prepublishOnly": "pnpm run build",
        "version": "pnpm run build",
        "release:patch": "pnpm version patch && pnpm publish",
        "release:minor": "pnpm version minor && pnpm publish",
        "release:major": "pnpm version major && pnpm publish"
    },
    "dependencies": {
        "jszip": "^3.10.1",
        "zustand": "^5.0.3"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.3",
        "tslib": "^2.6.2",
        "typescript": "~5.7.2",
        "vite": "^6.1.0",
        "vite-plugin-dts": "^4.5.0",
        "vitest": "^3.0.5"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib/*",
        "dist/*",
        "!**/*.tsbuildinfo"
    ]
}
