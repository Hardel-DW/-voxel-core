{
    "compilerOptions": {
        "target": "ES2024",
        "module": "esnext",
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@test/*": ["./test/*"]
        },
        "declaration": true,
        "declarationDir": "./dist/types", 
        "sourceMap": true,
        "emitDeclarationOnly": false
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "test",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
