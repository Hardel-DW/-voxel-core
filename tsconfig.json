{
    "compilerOptions": {
        "target": "ES2024",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": false,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./package/*"],
            "@test/*": ["./test/*"]
        }
    },
    "include": ["package", "test"],
    "exclude": ["node_modules"]
}
