{
    "compilerOptions": {
        "target": "ES2024",
        "module": "esnext",
        "outDir": "dist",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noUncheckedIndexedAccess": false,
        "noEmit": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@test/*": ["./test/*"]
        },
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": false
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "test",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}
